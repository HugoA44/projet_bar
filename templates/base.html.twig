<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Cui-Cuite - {% block title %}{% endblock %}</title>

    {% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/products.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/detail.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/accueil.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/admin.css') }}" />
    <link
      rel="icon"
      type="image/png"
      href="{{ asset('assets/images/logo/favicon-8.png') }}"
    />

    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
    {% endblock %} {% block javascripts %} encore_entry_script_tags("app") }}#}
    {% endblock %}
  </head>
  <body>
    <div class="main">
      <div class="sidebar">
        <div class="sidebar-content">
          <a href="{{ path('index') }}">
            <img
              src="{{ asset('assets/images/logo/cuicuite.svg') }}"
              alt=""
              class="logo-sidebar"
            />
          </a>

          <nav>
            <ul>
              <a href="{{ path('index') }}">
                <li>
                  <i class="fas fa-home"></i>
                  Accueil
                </li>
              </a>
              <a href="{{ path('products') }}">
                <li>
                  <i class="fas fa-glass-martini-alt"></i>
                  Produits
                </li>
              </a>
              {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
              <a href="{{ path('login') }}">
                <li>
                  <i class="fas fa-user"></i>

                  Connexion
                </li>
              </a>
              <a href="{{ path('register') }}">
                <li>
                  <i class="fas fa-sign-in-alt"></i>

                  Inscription
                </li>
              </a>
              {% endif %} {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('admin') }}">
                <li>
                  <i class="fas fa-users-cog"></i>
                  Admin
                </li>
              </a>
              {% endif %} {% if is_granted('IS_AUTHENTICATED_FULLY') %}
              <a href="{{ path('logout') }}">
                <li>
                  <i class="fas fa-door-open"></i>
                  Se d√©connecter
                </li>
              </a>
              {% endif %}
            </ul>
          </nav>
        </div>
      </div>
      <div class="content">{% block body %}{% endblock %}</div>
    </div>
  </body>
</html>
